    <!-- Journeys -->
    <record model="ir.ui.view" id="bookings.journeys_list">
      <field name="name">Journeys List</field>
      <field name="model">bookings.journey</field>
      <field name="arch" type="xml">
        <!-- Add some colors to the different states of the Journey -->
        <tree colors="green:state=='finished', blue:state=='pending', yellow:state=='in_progress'">
          <field name="id"/>
          <field name="client_id"/>
          <field name="route_id"/>
          <field name="pack_id"/>
          <field name="state" widget="statusbar"/>
        </tree>
      </field>
    </record>

    <!-- Routes -->
    <record model="ir.ui.view" id="bookings.routes_list">
      <field name="name">Routes List</field>
      <field name="model">bookings.routes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="name"/>
          <field name="distance"/>
          <field name="url_maps"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Packs -->
    <record model="ir.ui.view" id="bookings.packs_list">
      <field name="name">Packs List</field>
      <field name="model">bookings.packs</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="name"/>
          <field name="distance"/>
          <field name="url_maps"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Lodgins -->
    <record model="ir.ui.view" id="bookings.lodgins_list">
      <field name="name">Lodgins List</field>
      <field name="model">bookings.lodgins</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="name"/>
          <field name="distance"/>
          <field name="url_maps"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


