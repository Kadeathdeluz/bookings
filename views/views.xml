    <!-- journeys -->
    <record model="ir.actions.act_window" id="bookings.action_journey">
      <field name="name">Viajes</field>
      <field name="res_model">bookings.journey</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- *** Top menu item *** -->

    <menuitem name="Reservas" id="bookings.menu_root"/>

    <!-- *** Menu categories *** -->

    <menuitem name="Viajes" id="bookings.menu_journeys" parent="bookings.menu_root"/>
    <menuitem name="Rutas" id="bookings.menu_routes" parent="bookings.menu_root"/>
    <menuitem name="Packs" id="bookings.menu_packs" parent="bookings.menu_root"/>
    <menuitem name="Hospedajes" id="bookings.menu_lodgins" parent="bookings.menu_root"/>
    
    <!-- *** Actions *** -->

    <menuitem name="Listar Viajes" id="bookings.menu_viajes_list" parent="bookings.menu_journeys"
              action="bookings.action_journey"/>
    <menuitem name="Listar Rutas" id="bookings.menu_routes_list" parent="bookings.menu_routes"
              action="bookings.action_journey"/>
    <menuitem name="Listar Packs" id="bookings.menu_packs_list" parent="bookings.menu_packs"
              action="bookings.action_journey"/>
    <menuitem name="Listar Hospedajes" id="bookings.menu_lodgins_list" parent="bookings.menu_lodgins"
              action="bookings.action_journey"/>

