    <!-- Journeys -->
    <record model="ir.ui.view" id="bookings.journey_list">
      <field name="name">Journeys List</field>
      <field name="model">bookings.journey</field>
      <field name="arch" type="xml">
        <!-- Add some colors to the different states of the Journey -->
        <tree>
          <field name="id"/>
          <field name="client_id"/>
          <field name="route_id"/>
          <!-- Calculated field: lodgins_count-->
          <field name="lodgins_count"/>
          <field name="pack_id"/>
          <field name="state" widget="statusbar"/>
        </tree>
      </field>
    </record>

    <!-- Routes -->
    <record model="ir.ui.view" id="bookings.route_list">
      <field name="name">Routes List</field>
      <field name="model">bookings.route</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="name"/>
          <field name="distance"/>
          <field name="url_maps"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Packs -->
    <record model="ir.ui.view" id="bookings.pack_list">
      <field name="name">Packs List</field>
      <field name="model">bookings.pack</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="name"/>
          <field name="price"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Lodgins -->
    <record model="ir.ui.view" id="bookings.lodgin_list">
      <field name="name">Lodgins List</field>
      <field name="model">bookings.lodgin</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="name"/>
          <field name="capacity"/>
          <field name="pets_allowed"/>
          <field name="reduced_mobility"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


    <!-- *** Actions opening views on models *** -->

    <!-- <record model="ir.actions.act_window" id="bookings.action_window">
      <field name="name">Models</field>
