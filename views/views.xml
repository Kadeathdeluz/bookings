<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="bookings.bookings_list">
      <field name="name">bookings list</field>
      <field name="model">bookings.bookings</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- explicit list view of journeys -->
    <record model="ir.ui.view" id="bookings.journeys_list">
      <field name="name">Journeys List</field>
      <field name="model">bookings.journey</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="client_id"/>
          <field name="route_id"/>
          <field name="pack_id"/>
          <field name="state"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="bookings.action_window">
      <field name="name">Models</field>
      <field name="res_model">bookings.bookings</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="bookings.action_journey">
      <field name="name">Viajes</field>
      <field name="res_model">bookings.journey</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
