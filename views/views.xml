    <!-- Top menu item -->

    <menuitem name="Reservas" id="bookings.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="bookings.menu_1" parent="bookings.menu_root"/>
    <menuitem name="Menu 2" id="bookings.menu_2" parent="bookings.menu_root"/>
    <menuitem name="Menu Viajes" id="bookings.menu_viajes" parent="bookings.menu_root"/>
    
    <!-- actions -->

    <menuitem name="Listar Viajes" id="bookings.menu_viajes_list" parent="bookings.menu_viajes"
              action="bookings.action_journey"/>
    <menuitem name="Listar Hospedajes" id="bookings.menu_hospedajes_list" parent="bookings.menu_1"
              action="bookings.action_window"/>
    <menuitem name="Listar Rutas" id="bookings.menu_bookings_list" parent="bookings.menu_2"
              action="bookings.action_window"/>
