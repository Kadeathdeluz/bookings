        <!-- Current Journey Report -->
        <record id="action_report_journey" model="ir.actions.report">
            <field name="name">Journey Report</field>
            <field name="model">bookings.journey</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bookings.report_journey_template</field>
